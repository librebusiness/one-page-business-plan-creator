<script>
    function showProductTab() {
        document.querySelector('#service-tab').classList.add('is-hidden');
        document.querySelector('#product-tab').classList.remove('is-hidden');
        document.querySelector('#service-selector').classList.add('is-outlined');
        document.querySelector('#product-selector').classList.remove('is-outlined');
    }
    
    function showServiceTab() {
        document.querySelector('#product-tab').classList.add('is-hidden');
        document.querySelector('#service-tab').classList.remove('is-hidden');
        document.querySelector('#product-selector').classList.add('is-outlined');
        document.querySelector('#service-selector').classList.remove('is-outlined');
    }
</script>